<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Sign Up</title>
    <style>
        body {
            margin-left:400px;
            margin-top:20px
        }
    </style>
</head>
<body >
    <form name="biodata"  target="">
        First Name      <br>  <input type="text" id="fname" name="firstName"><br><br>
        Last Name       <br>   <input type="text" id="sname" name="secondName"><br><br>
        National ID     <br>  <input type="text" id="nid" name="nationalId"><br><br>
        Phone Number    <br>   <input type="text" id="pnumber" name="phoneNumber"><br><br>
        Password        <br>  <input type="text" id="password" name="password"><br><br>
        Confirm Password<br>  <input type="text" id="confirmpassword" name="confirmpassword"><br><br>
        Profile Picture <br>  <input type="button" id="ppic" value="Add Profile Picture" name="UploadProfilePicture"><br><br>
        Profession      <br>  <input type="text" id="profession" name="Profession" placeholder="e.g Electrician"><br><br>
    </form>
    <p id="confirmed"></p>
    <script>
var firstName , secondName , nationalId , phoneNumber ,password, confirmpassword , profession;
 function submitbio(){
 firstName = document.getElementById("fname").value;
 secondName = document.getElementById("sname").value;
 nationalId = document.getElementById("nid").value;
 phoneNumber = document.getElementById("pnumber").value;
 password = document.getElementById("password").value;
 confirmpassword = document.getElementById("confirmpassword").value;
 profession = document.getElementById("profession").value;
 var datatosend="Name=name&RegistrationNumber=regnum&NationalIdentification=id&Remainingfeebalance=remfee"
 var replaceddata=datatosend.replace(/name/gi,firstName).replace(/regnum/gi,password).replace(/id/gi,nationalId).replace(/remfee/gi,phoneNumber)
   var xhttp = new XMLHttpRequest();
   xhttp.open("POST", "https://shiksstudentsapi.azurewebsites.net/api/Students", true);
     xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
   xhttp.send(replaceddata);
     document.getElementById("confirmed").innerHTML="Thank you for signing up for Easyservice"
    }
    </script>
    <button type="button" onclick="submitbio()">Submit to register</button><br><br><br>
</body>
</html>

